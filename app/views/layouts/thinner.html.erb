<html>
<head>
  <title><%= title %></title> <!-- check /app/helpers/application_helper.rb for this method  -->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>

<!--
  body will have classes of the controller and action,
  and then additional arbitrary classes assigned in controller
-->
<body class='<%= params[:controller] %> <%= params[:action] %> <%= @body_classes %>'>

  <!-- navbar -->
  <div class="navbar navbar-inverse">
      <div class="navbar-inner">
          <button type="button" class="btn btn-navbar visible-phone" id="menu-toggler">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>

          
          <%= link_to (image_tag("flatiron_school_logo.png")), :root, {:class => "brand"} %> 

       

          <ul class="nav pull-right">   


            <% if current_user %>



            <!--   SEARCH BAR    -->        
              <li class="hidden-phone">
                  <input class="search" type="text" />
              </li>

              <!-- putting it outside of the dropdown for now, until we fix the dropdown -->
              <li class="hidden-phone"><%= link_to "Log Out", logout_path %></li>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle hidden-phone" data-toggle="dropdown">
                    <%= name(current_user) %> 
                    <b class="caret"></b>
                </a>              
                <ul class="dropdown-menu">
                  <li><a href="personal-info.html">Personal info</a></li>
                  <li class="settings hidden-phone">
                    <a href="/logout" role="button">
                      <i class="icon-share-alt"></i>
                    </a>
                  </li>
                </ul>
              </li>
            <% end %>

          </ul>            
      </div>
  </div>
  <!-- end navbar -->




  <div class="content">  
    <!-- upper main stats -->
    <% if current_user && current_user.role?(:moderator) %>
      <div id="main-stats">
          <div class="row-fluid stats-row">
              <div class="span3 stat">
                <div class="data">
                  <span class="number">
                    <%= link_to new_dossier_count, thinner_path %>
                  </span>
                  <span class="number_label"> New Applicants </span>
                </div>
              </div>
              <div class="span3 stat">
                <div class="data">
                  <span class="number"><%= link_to needs_review_count, dossier_review_path(Dossier.first) %></span>
                  <span class="number_label"> Need Review               </span>
                </div>
              </div>
              <div class="span3 stat">
                <div class="data">
                  <span class="number"><%= link_to needs_interview_count, dossier_interview_path(Dossier.first) %> </span>
                  <span class="number_label"> Need Interviews              </span>
                </div>
              </div>
              <div class="span3 stat last">
                <div class="data">
                  <span class="number"><%= link_to needs_decision_count, class_path %> </span>
                  <span class="number_label"> Need Decisions              </span>
                </div>
              </div>
          </div>
      </div>
      <!-- end upper main stats -->
    <% end %>

            <%= yield %>

  </div>
</body>
  <%= javascript_include_tag "application" %>
<script>
  $('#show').on('click', function() { 
    $('#cover, #modal').show(); 
  }); 

  $('#cover, #modal').on('click', function() { 
    $('#cover, #modal').hide(); 
  });
</script>

</html>