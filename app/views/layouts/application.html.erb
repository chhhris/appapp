<html>
<head>
  <title><%= title %></title> <!-- check /app/helpers/application_helper.rb for this method  -->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>

<!--
  body will have classes of the controller and action,
  and then additional arbitrary classes assigned in controller
-->
<body class='<%= params[:controller] %> <%= params[:action] %> <%= @body_classes %>'>

  <%= render "layouts/nav" %>

  <div class="content">  
    <!-- upper main stats -->
    <% if current_user && current_user.role?(:moderator) %>
      <%= render "layouts/stats" %>
    <% end %>

    <div class="container-fluid" id="pad-wrapper">
      <%= yield %>
    </div>
  </div>
  <%= javascript_include_tag "application" %>
</body>
</html>
