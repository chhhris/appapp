<html>
<head>
  <title><%= title %></title> <!-- check /app/helpers/application_helper.rb for this method  -->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<!--
  body will have classes of the controller and action,
  and then additional arbitrary classes assigned in controller
-->
<body class='<%= params[:controller] %> <%= params[:action] %> <%= @body_classes %>'>

  <!-- navbar -->
  <div class="navbar navbar-inverse">
      <div class="navbar-inner">
          <button type="button" class="btn btn-navbar visible-phone" id="menu-toggler">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>

          
          <%= link_to (image_tag("flatiron_school_logo.png")), :root, {:class => "brand"} %> 

       

          <ul class="nav pull-right">   


            <% if current_user %>



            <!--   SEARCH BAR    -->        
              <li class="hidden-phone">
                  <input class="search" type="text" />
              </li>

              <li class="dropdown">
                <a href="#" class="dropdown-toggle hidden-phone" data-toggle="dropdown">
                    <%= current_user.full_name %> 
                    <b class="caret"></b>
                </a>              
                <ul class="dropdown-menu">
                  <% if current_user.last_dossier %>
                    <li class="hidden-phone">
                      <%= link_to "Last dossier", dossier_path(current_user.last_dossier) %>
                    </li>
                  <% end %>
                  <li class="settings hidden-phone">
                    <%= link_to "Log Out", logout_path %>
                  </li>
                </ul>
              </li>
            <% end %>

          </ul>            
      </div>
  </div>
  <!-- end navbar -->




  <div class="content">  
        <!-- upper main stats -->
<% if current_user && current_user.role?(:moderator) %>
  <div id="main-stats">
      <div class="row-fluid stats-row">
          <div class="span3 stat">
              <div class="data">
                  <span class="number"> <%= new_dossier_count %> </span>
                 New Applicants 
              </div>
          </div>
          <div class="span3 stat">
              <div class="data">
                  <span class="number"><%= needs_review_count %></span>
                  Need Review
              </div>
          </div>
          <div class="span3 stat">
              <div class="data">
                  <span class="number"><%= needs_interview_count %></span>
                  Need Interviews
              </div>
          </div>
          <div class="span3 stat last">
              <div class="data">
                  <span class="number"><%= needs_decision_count %></span>
                  Need Decisions
              </div>
          </div>
      </div>
  </div>
  <!-- end upper main stats -->
<% end %>

    <div class="container-fluid" id="pad-wrapper">


        

          <%= yield %>

    </div>
  </div>
</body>
</html>
