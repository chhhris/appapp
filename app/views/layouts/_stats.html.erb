<div id="main-stats">
    <div class="row-fluid stats-row">
        <div class="span3 stat">
          <div class="data">
            <span class="number">
              <%= link_to dossier_count_by_state(:new), thinner_path %>
            </span>
            <span class="number_label"> New Applicants </span>
          </div>
        </div>
        <div class="span3 stat">
          <div class="data">
            <span class="number"><%= link_to dossier_count_by_state(:needs_review), needs_review_first_path %></span>
            <span class="number_label"> Need Review               </span>
          </div>
        </div>
        <div class="span3 stat">
          <div class="data">
            <span class="number"><%= link_to dossier_count_by_state(:needs_interview), dossier_interview_path %> </span>
            <span class="number_label"> Need Interviews              </span>
          </div>
        </div>
        <div class="span3 stat last">
          <div class="data">
            <span class="number"><%= link_to dossier_count_by_state(:needs_decision), courses_path %> </span>
            <span class="number_label"> Need Decisions              </span>
          </div>
        </div>
    </div>
</div>
