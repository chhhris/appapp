<!-- current courses select box -->
<h1>
  List of courses
</h1>

<div>
<% @courses.each do |course| %>
  <div>
    <%= course.semester %>
  </div>
<% end %>
</div>

<!-- class stats view -->
<div class="class-stats">
</div>


<!-- the needs decision view -->
<div class="needs_decision">
  <h2>Applicants who Need a Decision</h2>
  <div class="row-fluid table">
    <table class="table table-hover">
      <thead>
        <tr>
            <th class="span2 sortable">Name</th>
            <th class="span2 sortable">
                <span class="line"></span>Hash Tags
            </th>
            <th class="span4 sortable">
                <span class="line"></span>Change Status
            </th>

        </tr>
      </thead>
      <tbody>
        <% @dossiers.each do |dossier| %>
          <tr id="dossier-<%= dossier.id %>">
            <td>
              <img src="http://placekitten.com/55/55" class="img-circle avatar hidden-phone" />
              <%= link_to dossier.user.full_name, interview_show_path(dossier), :class => "name" %>
            </td>

            <!-- Hash Tags -->
            <td>
              <% dossier.hashtags.each do |hashtag| %>
                <%= hashtag.content %>
              <% end %>
            </td>
            <td>
              <ul>
                <% dossier.aasm.events.each do |event| %>
                  <li><%= link_to event.to_s.humanize, transition_path(dossier, event), method: :put, data: { confirm: 'Are you sure?' } %></li>
                <% end %>
                <% unless ["accepted", "rejected", "wont_attend", "needs_payment"].include? dossier.aasm_state %>
                  <li><%= link_to "Reject", transition_path(dossier, :reject), method: :put, data: { confirm: 'Are you sure?' } %></li>
                  <li><%= link_to "Accept", transition_path(dossier, :accept), method: :put, data: { confirm: 'Are you sure?' } %></li>
                <% end %>
              </ul>
            </td>

          </tr>
        <%end%>
      </tbody>
    </table>
  </div>

</div>




<!-- the current class view -->
<div class="current_class">
  <h2>Pending Applicants</h2>
  <% if @pending %>
    <div style="margin-left:auto; margin-right:auto;">
      <% @pending.each do |dossier| %>    
          <span style="display:inline-block; margin:0px 10px; padding:50px; position:relative; border-bottom:3px dotted grey;">
            <img src="http://placekitten.com/180/180" style="margin-left:auto; margin-right:auto;">
            <h4 style="position:absolute; left:0;"><%= name(dossier.user) %></h4>
          </span>
      <%end%>
    </div>
  <% end %>

  <div style="margin-top:50px; padding-top;50px border:10px;">
    <h2>Flatiron Class</h2>
    <% if @confirmed %>
      <div style="margin-left:auto; margin-right:auto;">
        <% @confirmed.each do |dossier| %>    
            <span style="display:inline-block; margin:0px 10px; padding:50px; position:relative; border-bottom:3px dotted grey;">
              <img src="http://placekitten.com/180/180" style="margin-left:auto; margin-right:auto;">
              <h4 style="position:absolute; left:0;"><%= name(dossier.user) %></h4>
            </span>
        <%end%>
      </div>
    <%end%>
  <%= link_to "Create a new course", new_course_path %>
  </div>
</div>