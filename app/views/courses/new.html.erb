<div class="row-fluid">
  <div class="span12" id="pad-wrapper">
    <div class="container">
      <div class="dossier-form-container">
        <h2> Create a new course</h2><br>
        <div class = "form-wrapper">
          
          <!-- form tag goes below -->
          <%= form_for @course do |f| %>
          
            <h4><strong> Course Information </strong> </h4>
            <hr> 
           <!-- NAME -->
            <div class="span12 field-box">
            <%= label_tag "Subject", nil, :class=>'span3' %>
            <%= text_field_tag "course[subject]", nil, :class => 'span9' %>
            </div>

            <div class="span12 field-box">
            <%= label_tag "Season", nil, :class=>'span3' %>
            <%= text_field_tag "course[season]", nil, :class => 'span9' %>
            </div>

            <!-- EMAIL  -->
            <div class="span12 field-box">
            <%= label_tag "Class Size", nil, :class=>'span3' %>
            <%= number_field_tag "course[seats]", nil, :class => 'span9' %>
            </div>
          
            <%= f.submit %>

          <%end%>  
        </div>
      </div>
    </div>
  </div>
</div>