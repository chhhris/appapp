<div class="login-content">  
  <div class="container-fluid" id="pad-wrapper">
  <h2>Log In to View Your Application Status</h2>
  <br>
    <div class="welcome-nav">
    <%= form_tag '/login', method: "POST" do %>
      <!--  -->
      <div class="welcome-h1">  
        <div class="field">
          <%= label_tag "E-mail" %> Email: 
          <%= text_field_tag "user[email]" %>
        </div>

        <div class="field">
          <%= label_tag :password %><br /> Password:
          <%= password_field_tag :password %>
        </div>

        <div class="actions">
          <%= submit_tag "Login", :class => "btn" %>
        </div>
      </div>
    <% end %>

    </div>

    <div class="actions">
      <%= submit_tag "Login", :class => "btn" %>
    </div>

    <p>Don't have an account yet? <%= link_to "Apply now", new_dossier_path %></p>
  </div>
</div>
