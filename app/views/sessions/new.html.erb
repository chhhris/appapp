<h1>Login to App App</h1>



<br>



<%= form_tag '/login', method: "POST" do %>
  <!--  -->
  <div class="field">
    <%= label_tag "E-mail:" %>
    <%= text_field_tag "user[email]" %>
  </div>

  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>


  <div class="actions">
    <%= submit_tag "Login" %>
  </div>


<% end %>
<%= link_to "sign-up", new_user_path %>