<!-- APPLICATION STATUS BOX -->

<div class="dossier-form-container">
  
  <h2><%= @user.full_name %>'s Application Status (<%= @dossier.semester %>) </h2>
  
  <%= render "dossiers/collapser_button" %>

  <div class="collapsible">
    <ul>
      <% @dossier.dossier_statuses.each do |status| %>
        <li>
          Marked as <em><%= status.status.humanize.downcase %></em> on <%= status.created_at.strftime("%A, %b %d at %I:%M %p") %>
        </li>
      <% end %>
    </ul>
    <% diff = @dossier.dossier_statuses.last.avg_time %>
    <% if diff.zero? %>
      <p>Congrats! No one has ever gotten this far along for this course yet. We can't calculate this information!</p>
    <% else %>
      <p>Average time in this status is: <strong><%= distance_of_time_in_words diff %></strong></p>
    <% end %>
  </div>

</div>