
<!DOCTYPE html>
<html>
<head>
  <title>Detail Admin - My Info</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <!-- bootstrap -->
    <link href="css/bootstrap/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap/bootstrap-responsive.css" rel="stylesheet">
    <link href="css/bootstrap/bootstrap-overrides.css" type="text/css" rel="stylesheet">

    <!-- global styles -->
    <link rel="stylesheet" type="text/css" href="css/layout.css">
    <link rel="stylesheet" type="text/css" href="css/elements.css">
    <link rel="stylesheet" type="text/css" href="css/icons.css">

    <!-- libraries -->
    <link rel="stylesheet" type="text/css" href="css/lib/font-awesome.css">
    
    <!-- this page specific styles -->
    <link rel="stylesheet" href="css/compiled/personal-info.css" type="text/css" media="screen" />

    <!-- open sans font -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>

    

  <!-- main container .wide-content is used for this layout without sidebar :)  -->
    
        <div class="container-fluid">
          <div class="row-fluid">

            <div class="settings-wrapper" id="pad-wrapper">
                <!-- avatar column -->
                

                <!-- edit form column -->
                <div class="span9 personal-info">
                    <div class="alert alert-info">
                        <h4>
                          
                          <%= @user.full_name %>'s Application Status
                        
                      </h4>
                      <br>
                        <p>
                         <strong>
                            Current Position in Pipeline for 
                            <%= @dossier.semester %>       
                         </strong>
                        </p> 

                        <span class="label label-success">
                              <%= @dossier.aasm_state.humanize %>
                        </span>
                    </div>
                    <h5 class="personal-title">Application Content</h5>
                    <br>

                    <div class= 'row-fluid span12'> <!-- Dossier content -->
                      
                      <div>

                        <div class="bio-item">
                          <%= render 'dossiers/collapser_button' %>
                          <strong>Your Career &amp; Ed.</strong>
                          <div class="collapsible collapsed">
                            <p><%= @dossier.career %></p>
                          </div>
                        </div>

                        <hr>

                        <div class="bio-item">
                          <%= render 'dossiers/collapser_button' %>
                          <strong>Your Purpose For Applying</strong>
                          <div class="collapsible collapsed">
                            <p><%= @dossier.purpose %></p>
                          </div>
                        </div>

                        <hr>

                        <div class="bio-item">
                          <%= render 'dossiers/collapser_button' %>
                          <strong>Your Past Coding Skills</strong>
                          <div class="collapsible collapsed">
                            <p><%= @dossier.code_skills %></p>
                          </div>
                        </div>

                        <hr>

                        <div class="bio-item">
                          <%= render 'dossiers/collapser_button' %>
                          <strong>Your Past Analytical Skills</strong>
                          <div class="collapsible collapsed">
                            <p><%= @dossier.analytic_skills %></p>
                          </div>
                        </div>

                        <hr>

                        <div class="bio-item">
                          <%= render 'dossiers/collapser_button' %>
                          <strong>Additional Tidbits</strong>
                          <div class="collapsible collapsed">
                            <p><%= @dossier.tidbits %></p>
                          </div>
                        </div>

                        <hr>

                      </div>
                    </div>
                </div>
                


<!-- Rightside -->
                <div class="span3 avatar-box">
                      <div class="personal-image ">
                        <div class="alert alert-info">
                        <%= image_tag ("http://www.gravatar.com/avatar/#{@avatar_hash}"),:class => "avatar img-circle"%>
                        <br>
                        <br>

                        <p>
                          Don't have an Avatar yet?
                        </p>
                        <p>
                          Sign up for gravatar <%= link_to "here", "https://en.gravatar.com/"%>
                        </p>
                       

                        
                        <p>
                          <% if can? :update, @dossier %>
                            <%= link_to "Edit this dossier", edit_dossier_path(@dossier) %>
                          <% end %>
                        </p>

                        <br>
                        <br>


                        <%= render "dossiers/application_status" %>
                        </div>
                      </div>
                </div>
          </div> <!-- Span fluid -->
               

          <div class= "row-fluid">
            <% if can? :manage, @dossier  %>
            <!-- COMMENTS BOX  --> 
            <!-- HIDE FROM APPLICANTS -->
            <%= render "dossiers/comments" %>
            <% end %>
          <div>

        </div>


<!-- if @response.response.code = "200" render code-->
              <% if  @codeschool.response.code == "200" %> 
              <div class="span12 img-box" >
                  <h4>
                  total score of all classes
                </h4>

                
               
               

                <%= @codeschool.parsed_response["user"]["total_score"] %><br>
                <h3>completed</h3>
                <%@codeschool.parsed_response["courses"]["completed"].each do |x| %>
                <div class=" row-fluid span12 img-box" style="width: 118px;float:left;">
                  <%=link_to image_tag(x['badge']), x['url'] %>
                    <%@codeschool.parsed_response["courses"]["in_progress"].each do |x| %>
                  <%=link_to image_tag(x['badge']), x['url'] %><br>
                  
                <% end %> 
                 
                </div>
                <% end %>
              <%end%>
              <br>
              </div>
              <div style ="float:left;">



                <!-- if @response.response.code = "200" render code-->
                <% if  @treehouse.response.code == "200" %> 

                <h3>Tree House</h3>

                  <p>Profile name: <%= @treehouse.parsed_response["profile_name"] %></p>
                  <% @treehouse.parsed_response["points"].each do |category, points| %>
                    <p><%= category %> points: <%= points %></p>
                  <% end %>

                  <p>Dossier state: <%= @dossier.aasm_state %></p>
                  <% if can? :update, @dossier %>
                    <p><%= link_to "Edit this dossier", edit_dossier_path(@dossier) %></p>
                  <% end %>
                <% end %>
              </div>
            </div>
        </div>
    </div>
    <!-- end main container -->

    <!-- end of right side -->


  <!-- scripts -->
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/theme.js"></script>
</body>
</html>









